<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_database" author="Catalin.Munteanu">
        <createTable tableName="originalreview">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="original_reviewPK"/>
            </column>
            <column name="review_external_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="part_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="review" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="likes" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="verified_purchase" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="created_on" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="updated_on" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="replyreview">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="reply_reviewPK"/>
            </column>
            <column name="review_external_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="externalreviewer">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="emag_reviewerPK"/>
            </column>
            <column name="external_user_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="nickname" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_on" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="productmetadata">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="product_metadataPK"/>
            </column>
            <column name="part_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="long_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="added_on" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
